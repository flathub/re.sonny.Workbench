{
  "id": "re.sonny.Workbench",
  "runtime": "org.gnome.Sdk",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.vala"],
  "command": "workbench",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=session-bus",
    "--share=network"
  ],
  "modules": [
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": [
        "-Ddocs=false",
        "-Dgtk3=false",
        "-Dgtk4=true",
        "-Dvapi=false",
        "-Dglade=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/vte.git",
          "commit": "5bf476f1d7283bc805ac8ae6abe94f81ffd7be05",
          "tag": "0.70.1"
        }
      ]
    },
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": ["-Ddocs=false", "-Dvapi=false", "-Dbackends=gtk4"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
          "sha256": "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
        }
      ]
    },
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/sonny/blueprint-compiler",
          "commit": "592ed7acab26f1633c03b0cd703a9cf2b7f09cb9"
        }
      ]
    },
    {
      "name": "Workbench",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": ["-Dprofile=default"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sonnyp/Workbench.git",
          "tag": "v43.1",
          "commit": "f0c5e3fcd382eb04c7a35eece7ce16fdb5d62e6c"
        }
      ]
    }
  ]
}
