{
  "app-id": "re.sonny.Workbench",
  "runtime": "org.gnome.Sdk",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "workbench",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=session-bus",
    "--share=network"
  ],
  "modules": [
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": [
        "-Ddocs=false",
        "-Dgtk3=false",
        "-Dgtk4=true",
        "-Dvapi=false",
        "-Dglade=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/vte.git",
          "commit": "b51feeca889d4b597e95b21bc77dc078892af11d"
        }
      ]
    },
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": ["-Ddocs=false", "-Dvapi=false", "-Dbackends=gtk4"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
          "sha256": "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
        }
      ]
    },
    {
      "name": "blueprint",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "./blueprint-compiler"
        }
      ]
    },
    {
      "name": "Workbench",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sonnyp/Workbench.git",
          "tag": "v42.0",
          "commit": "b86cdfb3e6440e4e034fcb6c609ff84401630faa"
        }
      ]
    }
  ]
}
